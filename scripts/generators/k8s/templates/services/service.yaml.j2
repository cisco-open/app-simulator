{%- if exposedPort %}
apiVersion: v1
kind: Service
metadata:
  name: {{ serviceName }}-ext
spec:
  selector:
    app: {{ appName|default('AppSimulatorApp') }}
    service: {{ serviceName }}
  ports:
    - protocol: TCP
      targetPort: {{ servicePort|default('8080') }}
      port: {{ exposedPort }}
  type: LoadBalancer
{% else %}
apiVersion: v1
kind: Service
metadata:
  name: {{ serviceName }}
spec:
  selector:
    app: {{ appName|default('AppSimulatorApp') }}
    service: {{ serviceName }}
  ports:
    - protocol: TCP
      targetPort: {{ servicePort|default('8080') }}
      port: 80
  type: ClusterIP
{% endif %}